<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_header_1"
        android:adjustViewBounds="true"
        android:id="@+id/nav_drawer_header_image"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/nav_drawer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Name Surname"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        app:layout_constraintBottom_toTopOf="@+id/nav_drawer_email"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/nav_drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:text="name.surname@domain.com"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/nav_drawer_menu_view"
        app:layout_constraintLeft_toLeftOf="@+id/nav_drawer_name" />

    <ImageView
        android:id="@+id/nav_drawer_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_account_circle_white_72dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_drawer_name"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.design.widget.NavigationView
        android:layout_width="304dp"
        android:layout_height="493dp"
        app:menu="@menu/main_menu2"
        android:id="@+id/nav_drawer_menu_view"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_drawer_header_image"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>